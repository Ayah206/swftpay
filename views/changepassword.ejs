      <section id="main-content">
          <section class="wrapper">
		 <div class="row">
				<div class="col-lg-12">
					<h3 class="page-header"><i class="fa fa-user"></i>Profile</h3>
					<ol class="breadcrumb">
						<li><i class="fa fa-user"></i>Profile</li>	
					</ol>
				</div>
			</div>
 <% if (errors == ""){ %>
  	<div></div>
    <% } else { %>
   		<div role="alert" class="alert alert-danger"><%= errors %></div>
     <% } %>
     <% if (infos == ""){ %>
  	<div></div>
    <% } else { %>
   		<div role="alert" class="alert alert-success"><%= infos %></div>
     <% } %>
				<div class="row">
                  <div class="col-lg-8">
                      <section class="panel">
                          <header style="font-size: 20px" class="panel-heading">
                              Change password
                          </header>
                          <div class="panel-body">
                          			<form action="/Changepassword/<%= currentUser.username %>" method="POST">
									<fieldset>
										<div class="form-group">
											<label>Current password</label>
											<input class="form-control" placeholder="Enter your current password" name="cpassword" type="password">
										</div>
										<div class="form-group">
											<label>New password</label>
											<input class="form-control" placeholder="Enter your new password" name="password1" type="password">
										</div>
										<div class="form-group">
											<label>Re-enter password</label>
											<input class="form-control" placeholder="Re-enter your new password" name="password2" type="password">
										</div>
										 <div class="form-group">
		                                    <button type="submit" class="btn btn-primary form-control">Change</button>
		                                </div>
									</fieldset>
								</form>
                          </div>
                      </section>
                  </div>      
          </section>
      </section>
