<% include adminloginheader %>

<% include adminloginsidebar %>

  <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
     <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header"><i class="fa fa-laptop"></i>User info</h3>
          <ol class="breadcrumb">
            <li><i class="fa fa-laptop"></i>User info</li>  
          </ol>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
         <section class="panel">
              <header class="panel-heading">
                  User Details
              </header>
             <table class="table table-striped">
                  <tbody>
                    <tr>
                      <th>Full name</th>
                      <td><%= user.fullname %></td>
                    </tr>
                     <tr>
                      <th>Username</th>
                      <td><%= user.username %></td>
                    </tr>
                     <tr>
                      <th>Gender</th>
                      <td><%= user.gender %></td>
                    </tr>
                     <tr>
                      <th>Country</th>
                      <td><%= user.country %></td>
                    </tr>
                  </tbody>
                </table>
                </section>
        </div>
        <div class="col-md-6">
         <section class="panel">
              <header class="panel-heading">
                   Contact Details
              </header>
          <table class="table table-striped">
                  <tbody>
                    <tr>
                      <th>Email Address</th>
                      <td><%= user.email %></td>
                    </tr>
                     <tr>
                      <th>Phone number 1</th>
                      <td><%= user.contact %></td>
                    </tr>
                     <tr>
                      <th>Phone number 1</th>
                      <td><%= user.contact2 %></td>
                    </tr>
                  </tbody>
                </table>
                </section>
        </div>
        </div>
        <div class="row">
        <div class="col-md-6">
         <section class="panel">
              <header class="panel-heading">
                   Ban Details
              </header>
            <table class="table table-striped">
                  <tbody>
                    <tr>
                      <th>Bank name</th>
                      <td><%= user.bank %></td>
                    </tr>
                     <tr>
                      <th>Account name</th>
                      <td><%= user.accountname %></td>
                    </tr>
                     <tr>
                      <th>account number</th>
                      <td><%= user.accountnum %></td>
                    </tr>
                  </tbody>
                </table>
                </section>
      </div>
      </div>
    
